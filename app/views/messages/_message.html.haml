.message
  .main-chat__message-list__comment-box
    .main-chat__message-list__comment-box__name
      = message.user.name
    .main-chat__message-list__comment-box__name__date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .main-chat__message-list__comment-box__message
    - if message.content.present?
      %p.main-chat__message-list__comment-box__message__content
        = message.content
      = image_tag message.image.url, class: 'message__image' if message.image.present?
      